{
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es2017",
    "lib": [
      "es2019",
      "dom.iterable",
      "DOM"
    ],
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
  },
}